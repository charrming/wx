/**index.wxss**/
.container{
  padding: 0;
  display: flex;
  flex-direction: column;  
  color: #ccc;
  background-color: #0c0c0c;
}
.top-top {
  height: 15vh;
  display: flex;
  padding: 0 50rpx;
  box-sizing: border-box;
}
.top-cover {
  padding: 15vh 0 0;
  overflow: hidden;
  flex: 0 0 56vh;
  box-sizing: border-box;
}
.top-left {
  flex: 1;height: 100%;
}
.img-cover {
  padding: 0 20rpx;height: 100%;
}
.top-left-img {
  width: 90%;
  height: 100%!important;
  border: 8px solid #292929;
  box-sizing: border-box;
  border-radius: 8px;
}
.top-right {
  flex: 1;
}
.top-right-top {
  color: white;
  margin-bottom: 25rpx;
  font-size: 38rpx;
}
.userinfo {
  display: flex;
  /* flex-direction: column; */
  align-items: center;
}
.loginbtn {
  background-color: #333333;
  color: #e8e8e8;
  font-size: 32rpx;
  border-radius: 8px;
  padding: 0;
}
.userinfo-avatar {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
  /* margin-top: 20rpx; */
  border-radius: 50%;
  /* box-shadow: 4px 4px 8px rgba(0,0,0,.2); */
}
.gorotate {
  animation: goRotate 5s infinite linear;
  -webkit-animation: goRotate 5s infinite linear;     
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #ccc;
  text-shadow: 4px 4px 8px rgba(0,0,0,.5);
  /* animation: goRed 2s infinite linear; */
  /* -webkit-animation: goRed 2s infinite linear;   */
}
.mode {
  display: flex;
  margin-top: 20rpx;
}
.mode-icon {
  font-size: 45rpx;
  margin-right: 20rpx;
}
.bottom-cover {
  flex: 1;
  overflow-y: auto;
  flex: 0 0 44vh;
  background-color: #fff;
  padding: 40rpx 0rpx 20rpx;
  box-sizing: border-box;
  border-radius: 20px 20px 0 0;
}
.bottom-cover::-webkit-scrollbar {
  display:none;
  width:0;
  height:0;
  color:transparent;
}
.gray-bg {
  background-color: #e0e0e061;
}
.music-list {
  border-radius: 0px 15px 0px 15px;
  position: relative;
  padding: 12rpx 108rpx 12rpx 100rpx;
  box-sizing: border-box;
}
.iconfont.icon-arrow-,
.iconfont.icon-zanting,
.iconfont.icon-shanchu {
  position: absolute;
  right: 22px;
  top: 26rpx;
  font-size: 60rpx;
  color: #291d1d;
}
.music-list-num {
  width: 100rpx;
  text-align: center;
  position: absolute;
  left: 0rpx;
  top: 36rpx;
  font-size: 34rpx;
  color: #909090;
}
.music-list-title {
  color: black;
  font-size: 36rpx;
  overflow: hidden;  /*超出部分隐藏*/
  text-overflow: ellipsis;  /*超出部分...显示*/
  white-space: nowrap;  /*不换行*/
  word-break: break-all;
  box-sizing: border-box;
}
.music-list-singer {
  color: #909090;
  font-size: 32rpx;
  overflow: hidden;  /*超出部分隐藏*/
  text-overflow: ellipsis;  /*超出部分...显示*/
  white-space: nowrap;  /*不换行*/
  word-break: break-all;
  box-sizing: border-box;
}
.mode-now {
  color: red;
}
.comment-list-title {
  padding: 0 15rpx;
  font-size: 30rpx;
  color: white;
  margin-bottom: 10rpx;
}
.comment-list-title .iconfont {
  float: right;
  margin-left: 20rpx;
  /* color: cyan; */
  font-size: 38rpx;
  display: table-footer-group;
}
.comment-view-cover{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
  width: 100vw;
  height: 100vh;
  background-color: #000000d1;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  top: -100%;
  /* transition: top 1s ease; */
}
.comment-view-cover.comment-view-show {
  top: 0;
}
.comment-view {
  position: relative;
  background-color: #bbbbbb85;
  border-radius: 12px; 
  width: 80%;
  margin-top: 18vh;
  /* height: 20vh; */
  padding: 20rpx;
  color: white;
  font-size: 36rpx;
  transition: all 1s ease;
  margin-top: -100%;
  margin-right: -100%;
  transition: all .3s linear;
}
.mask::after {
  content: '正在上传，请稍等~';
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  background-color: #292929cc;
  z-index: 999;
}
.comment-view-cover.comment-view-show .comment-view {
  margin-top: 18vh;margin-right: 0;
}
.comment-view .comment-view-title {
  text-align: center;
  font-size: 50rpx;
}
.comment-view textarea {
  border-radius: 4px; 
  background-color: white;
  padding: 12rpx;
  color: black;
  margin: 20rpx 0;
  box-sizing: border-box;
  width: 100%;
}
.comment-view-btn-set {
  display: flex;
}
.comment-view button {
  flex: 1;
  letter-spacing: 2px;
  font-weight: 700;
  margin: 0 10rpx;
}
.comment-view button:nth-child(1){
  background-color: #000000;
  color: white;
  flex: 2;
}
.comment-view button:nth-child(2){
  border: 2px solid white;
  color: white;
  background-color:transparent;
}
.comment-list-cover {
  height: 85%;
  overflow-y: scroll;
  /* margin-top: 20rpx; */
}
.top-bottom {
  height: 26vh;
  padding: 30rpx 60rpx;
  box-sizing: border-box;
  /* overflow: auto; */
}
.comment-item {
  border-top: 1px solid #313131;
  padding: 10rpx 15rpx;
}
.comment-item-name {font-size: 30rpx;color: white;margin-right: 10rpx;}
.comment-item-date {font-size: 22rpx;}
.comment-item-content {
    font-size: 28rpx;
    color: #fbfdfd;
    line-height: 48rpx;
    letter-spacing: 1px;
}
.comment-item-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  vertical-align: sub;margin-right: 10rpx;
}

.my-list-cover {
  position: fixed;
  left: 0;
  z-index: 998;
  width: 100vw;
  height: 100vh;
  background-color: #ffffff8c;
  display: flex;
  flex-direction: column-reverse;
  top: 100%;
}
.my-list-show {
  top: 0;
}

.my-list {
  height: 60vh;
  /* overflow: auto; */
  background-color: black;
  color: white;
  border-radius: 30px 30px 0px 0px;
  /* padding: 50rpx 30rpx; */
  transform: translateY(100%);
  transition: transform .5s ease;
display: flex;
flex-flow: column;
}
.my-list-play {
  flex: 0 0 100rpx;
  height: 100rpx;
  color: white;
  width: 100%;
  padding: 28rpx 62rpx;
  box-sizing: border-box;
  font-size: 36rpx;
}
.my-list-play .icon-bofang_huaban {
  font-size: 40rpx;
  vertical-align: middle;
}
.music-list-cover {
  flex: 1;
  overflow: auto;
}
.my-list-show .my-list {
  transform: translateY(0);
}
.my-list-gray-bg {
  background-color: #ffffff14;
}
.my-list .music-list {
  border-radius: 0;
}
.my-list .iconfont,
.my-list .music-list-num,
.my-list .music-list-title {
  color: white;
}
.my-list .icon-yinpin {
  color: #00ff43;
}
.mode-now-green {
  color: #00ff43;
}
.upload-view-input {
  padding: 21rpx;
  border: 2px solid white;
  border-radius: 4px;
  margin: 15rpx;
}
.place-holder {
  color:#bbbbbb;
}